<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="navigation_view">

    <group android:checkableBehavior="single">
        <item
            android:id="@+id/nav_label_connection"
            android:enabled="false"
            android:checkable="false"
            app:actionLayout="@layout/nav_label_camerainfo"
            tools:ignore="MenuTitle" />

        <item
            android:id="@+id/nav_camera_status"
            android:enabled="false"
            android:checkable="false"
            app:actionLayout="@layout/nav_camera_info"
            tools:ignore="MenuTitle" />

        <item
            android:id="@+id/nav_home"
            android:icon="@drawable/ic_material_home"
            android:title="@string/menu_option_home" />

        <item
            android:id="@+id/nav_label_settings"
            android:enabled="false"
            android:checkable="false"
            app:actionLayout="@layout/nav_label_settings"
            tools:ignore="MenuTitle" />

        <item
            android:id="@+id/nav_settings_app"
            android:icon="@drawable/ic_material_settings"
            android:title="@string/menu_settings_app" />

