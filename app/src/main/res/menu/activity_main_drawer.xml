        <item
            android:id="@+id/nav_settings_audio"
            android:icon="@drawable/ic_material_tune"
            android:title="@string/menu_settings_audio"/>
        <item
            android:id="@+id/nav_settings_preview"
            android:icon="@drawable/ic_material_preview"
            android:title="@string/menu_settings_camerapreview"/>

        <item
            android:id="@+id/nav_settings_live"
            android:icon="@drawable/ic_material_videocam"
            android:title="@string/menu_settings_cameraliveoptions"/>
